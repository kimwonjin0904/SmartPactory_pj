<Window x:Class="SensorMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Sensor Monitor App" Height="650" Width="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="WarningTextBlock"
                       Foreground="Red"
                       FontSize="16"
                       FontWeight="Bold"
                       Visibility="Collapsed"
                       Text="⚠ 온도가 기준치를 초과했습니다!"
                       Margin="0,0,0,10"/>

            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <TextBlock Text="통계 정보 및 실시간 값" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                <TextBlock x:Name="LatestValueText" FontSize="14" FontWeight="SemiBold" Foreground="DarkBlue" Margin="5"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock x:Name="MinTempText" Text="최소 온도: " Margin="5"/>
                    <TextBlock x:Name="MaxTempText" Text="최대 온도: " Margin="5"/>
                    <TextBlock x:Name="AvgTempText" Text="평균 온도: " Margin="5"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock x:Name="MinHumText" Text="최소 습도: " Margin="5"/>
                    <TextBlock x:Name="MaxHumText" Text="최대 습도: " Margin="5"/>
                    <TextBlock x:Name="AvgHumText" Text="평균 습도: " Margin="5"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <TextBlock Text="설비 상태:" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock x:Name="EquipmentStatusText" Text="정지" FontSize="16" Foreground="Red" Margin="0,0,10,0"/>
                <Button Content="가동 / 정지" Click="ToggleEquipmentStatusButton_Click" Width="100"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="SensorDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="True"
                      Height="200"
                      Margin="0,10,10,10" />

            <GroupBox Grid.Column="1" Header="이벤트 로그" Margin="10,10,0,10">
                <ListBox Name="EventLogListBox" Height="150" />
            </GroupBox>
        </Grid>

        <Grid Grid.Row="2" Height="250" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <lvc:CartesianChart Grid.Column="0"
                                Series="{Binding TempSeries}"
                                XAxes="{Binding Labels}"
                                Margin="0,0,5,0"/>
            <lvc:CartesianChart Grid.Column="1"
                                Series="{Binding HumSeries}"
                                XAxes="{Binding Labels}"
                                Margin="5,0,0,0"/>
        </Grid>
    </Grid>
</Window>