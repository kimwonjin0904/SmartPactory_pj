<Window x:Class="SensorMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Sensor Monitor App" Height="700" Width="1050">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- 경고 표시 -->
        <TextBlock x:Name="WarningTextBlock"
                   Grid.Row="0"
                   Foreground="Red"
                   FontSize="16"
                   FontWeight="Bold"
                   Visibility="Collapsed"
                   Text="⚠ 온도가 기준치를 초과했습니다!"
                   Margin="0,0,0,10"/>

        <!-- 설비 상태 및 가동/정지 버튼 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="설비 상태:" FontSize="16" Margin="0,0,10,0"/>
            <TextBlock x:Name="EquipmentStatusText" Text="정지" FontSize="16" Foreground="Red" Margin="0,0,10,0"/>
            <Button Content="가동 / 정지" Click="ToggleEquipmentStatusButton_Click" Width="100"/>
        </StackPanel>

        <!-- 센서 데이터 및 통계 -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock x:Name="MinTempText" Text="최소 온도: " Width="150"/>
                <TextBlock x:Name="MaxTempText" Text="최대 온도: " Width="150"/>
                <TextBlock x:Name="AvgTempText" Text="평균 온도: " Width="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock x:Name="MinHumText" Text="최소 습도: " Width="150"/>
                <TextBlock x:Name="MaxHumText" Text="최대 습도: " Width="150"/>
                <TextBlock x:Name="AvgHumText" Text="평균 습도: " Width="150"/>
            </StackPanel>
            <TextBlock x:Name="LatestValueText" Text="최신 값: " Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 데이터 그리드 및 이벤트 로그 -->
        <Grid Grid.Row="2" Margin="0,150,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DataGrid x:Name="SensorDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="True"
                      Margin="0,0,10,0" />

            <GroupBox Grid.Column="1" Header="이벤트 로그">
                <ListBox x:Name="EventLogListBox"/>
            </GroupBox>
        </Grid>

        <!-- 차트 나타내기 (온도,습도) -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <lvc:CartesianChart Grid.Column="0"
                                Series="{Binding TempSeries}"
                                Margin="0,0,5,0"/>
            <lvc:CartesianChart Grid.Column="1"
                                Series="{Binding HumSeries}"
                                Margin="5,0,0,0"/>
        </Grid>
    </Grid>
</Window>
