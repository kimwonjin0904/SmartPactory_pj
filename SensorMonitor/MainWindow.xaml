<Window x:Class="SensorMonitorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="센서 모니터링" Height="600" Width="800">

    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="실시간 센서 모니터링" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <TextBlock x:Name="LatestValueText" FontSize="14" FontWeight="SemiBold" Foreground="DarkBlue" />
            <TextBlock x:Name="WarningTextBlock" FontSize="14" FontWeight="Bold" Foreground="Red" Margin="0,5,0,0" />

            <DataGrid x:Name="SensorDataGrid" AutoGenerateColumns="True" Height="250" Margin="0,10,0,0" />

            <TextBlock Text="온도/습도 그래프" FontSize="16" FontWeight="Bold" Margin="0,20,0,5" />

            <lvc:CartesianChart x:Name="SensorChart" Height="200" />
        </StackPanel>
    </Grid>
</Window>
